---
import Layout from "../layouts/Layout.astro";
import { fetchPosts, type Post } from "../loaders/jsonPlaceholderLoader";

const posts = await fetchPosts();
---

<Layout title="JSON Placeholder Posts">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-6">JSON Placeholder Posts</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        posts.map((post: Post) => (
          <article class="bg-white shadow rounded-lg p-6">
            <h2 class="text-xl font-semibold mb-2">{post.title}</h2>
            <p class="text-gray-600 mb-4">User ID: {post.userId}</p>
            <p class="text-sm">{post.body}</p>
          </article>
        ))
      }
    </div>
  </main>
</Layout>
